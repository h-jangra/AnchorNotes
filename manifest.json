{
  "manifest_version": 3,
  "name": "Anchor Notes",
  "version": "1.0",
  "description": "Add floating emoji notes to websites.",
  "icons": {
    "128": "assets/anchor.png"
  },
  "side_panel": {
    "default_path": "/sidepanel.html"
  },
  "background": {
    "service_worker": "bg.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "sidePanel",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/script/content.js"
      ],
      "html": [
        "/emoji.html"
      ]
    }
  ],
  "options_page": "/newTab.html",
  "chrome_url_overrides": {
    "newtab": "/newTab.html"
  }
}
