{
  "manifest_version": 3,
  "name": "Draggable Number Labels",
  "version": "1.0",
  "description": "Add draggable numbered labels to DOM elements via context menu",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {
    "128": "anchor.png"
  }
}
